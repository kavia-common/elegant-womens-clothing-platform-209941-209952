# Backend Express API - Environment Variables

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# CORS - comma separated list or single origin
# Example: http://localhost:3000,http://127.0.0.1:3000
CORS_ORIGIN=http://localhost:3000

# JWT
JWT_SECRET=CHANGE_ME_SUPER_SECRET_JWT_KEY
JWT_EXPIRES_IN=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=10

# Database (PostgreSQL)
# Use either DATABASE_URL or individual PG* variables
# DATABASE_URL format example:
# postgres://user:password@localhost:5432/dbname?sslmode=disable
DATABASE_URL=

PGHOST=localhost
PGPORT=5432
PGDATABASE=elegant_clothing
PGUSER=postgres
PGPASSWORD=postgres

# SSL for production (pg pool uses this automatically if NODE_ENV=production)
